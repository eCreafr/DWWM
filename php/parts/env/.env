
#exemple de .env pour une application PHP

# Configuration environnement
APP_NAME="Mon Application"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Paris

# Base de données MySQL
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nom_base_de_donnees
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# API Mandrill (Mailchimp Transactional)
MANDRILL_API_KEY=your-mandrill-api-key-here
MANDRILL_FROM_EMAIL=noreply@votredomaine.com
MANDRILL_FROM_NAME="Nom Expéditeur"
MANDRILL_REPLY_TO=contact@votredomaine.com

# Google reCAPTCHA v2
RECAPTCHA_SITE_KEY=your-site-key-here
RECAPTCHA_SECRET_KEY=your-secret-key-here
RECAPTCHA_THRESHOLD=0.5